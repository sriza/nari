    <section style="background-color: #EDF3F3;">
        <div class="container">







            <div class="row">
                <div style="width: 100%;">



                    <div style="width: 100%;">
                        <!-- here you go writing -->
                        <br>
                        <div class="panel panel-white post panel-shadow" id="askq">
                            <form action="/addquery" method="POST">
                                <p style="margin:15px">Let women like you help you solve them</p>

                                <textarea row=10 name='question'
                                    style="border-block-color: pink black pink ; margin:15px; width: 90%; border-radius: 5px;"></textarea>


                                <input id="button" type="submit" value="ASK" />


                            </form>
                        </div>
                        <br>
                    </div>

                    <link rel="stylesheet" type="text/css"
                        href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">

                    <% queries.forEach(function(query) { %>

                    <div class="container" style="margin-bottom: 3%">
                        <div>
                            <div class="panel panel-white post panel-shadow" style="background-color: white;">
                                <div class="post-heading">
                                    <div class="pull-left image">
                                        <img src="/images/girl.png" class="img-circle avatar" alt="user profile image">
                                    </div>
                                    <div class="pull-left meta">
                                        <div class="title h5">
                                            <a href="#"><b><%= query.username %></b></a>
                                            made a post.
                                        </div>
                                        <h6 class="text-muted time"><%= query.date %></h6>
                                    </div>
                                </div>
                                <div class="post-description">
                                    <p><%= query.description %></p>
                                    <form method='POST' action=''></form>
                                    <div name="postid" style="display:none"><%= query.id%></div>

                                    <div class="stats">
                                        <a href="/like" class="btn btn-default stat-item">
                                            <i class="fa fa-thumbs-up icon"></i><%= query.like%>
                                        </a>
                                        <a href="#" class="btn btn-default stat-item"
                                            onclick="document.getElementById('one').style.display='block'">
                                            <i class="fa fa-comment icon"></i><%= query.comment%>


                                        </a>



                                    </div>
                                    </form>
                                </div>
                                <div class="post-footer" id='one'>
                                    <form method="POST" action="addcomment">
                                        <div class="input-group">
                                            <input type="hidden" name="_id" value="<%= query._id%>" />
                                        </div>

                                        <input class="form-control" placeholder="Add a comment" type="text"
                                            name='comment'>
                                        <span class="input-group-addon">
                                            <button type="submit" class="btn btn-success pink"><i
                                                    class="fa fa-share"></i> ADD</button> </span>
                                    </form>
                                </div>

                                <ul class="comments-list" style="margin-left:3%; margin-right: 3%;">
                                    <% comment.forEach(function(comment) { %>

                                    <%if (comment.queryid==query._id) { %>
                                    <hr>
                                    <div class="media-body">
                                        <span class="text-muted pull-right">
                                            <small class="text-muted"><%= comment.date%></small>
                                        </span>
                                        <strong style="text-decoration-color:pink ;">@<%=comment.username%></strong>
                                        <p>
                                            <%= comment.comment%>
                                        </p>
                                    </div>


                                    <%}%>

                                            <%})%>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <%})%>
                <!-- until here -->


                <div class="col-md-4 sidebar ftco-animate order-first">
                    <div class="sidebar-box">

                    </div>
                </div>



            </div>
        </div>
    </section> <!-- .section -->




