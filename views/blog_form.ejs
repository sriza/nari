<body>
    <div class="container-login100" style="background-image: url('images/bg.png');">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-80 p-b-30" style="width: 90%;">
            <form method="POST" action="/addblog">
                <span class="login100-form-title p-b-37">
                    Blog
                </span>
                <br>

                <div class="wrap-input100 validate-input m-b-20" data-validate="Enter username">
                    <input class="input100" type="text" name="name" placeholder="name">
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input m-b-25" data-validate="Enter title for your blog">
                    <input class="input100" type="text" name="title" placeholder="Title of the blog">
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input m-b-25" data-validate="Enter title for your blog">
                    <input class="input100" type="text" name="desc" placeholder="Write the main theme of your blog">
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input m-b-25">
                    <textarea id="noise" name="blog" class="widgEditor nothing">
                    </textarea>
                    </fieldset>

                    <span class="focus-input100"></span>
                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        Post
                    </button>
                </div>
            </form>


        </div>
    </div>


    <!--===============================================================================================-->
